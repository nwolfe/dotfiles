#!/bin/sh

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias pp='cd $PUPPETLABS'
alias ppdb='cd $PUPPETLABS/puppetdb'
alias ptk='cd $PUPPETLABS/trapperkeeper'
alias pps='cd $PUPPETLABS/puppet-server'
alias pca='cd $PUPPETLABS/jvm-certificate-authority'
alias pconf='cd $PUPPETLABS_CONF/puppet/master/conf'

# Verify destruction
alias rm='rm -iv' # Verbose, print removed files
alias mv='mv -i'
alias cp='cp -i'

# List directory contents
# -h  Human-readable file sizes
# -G  Colored output
# -F  Append special character denoting file type
# -o  Long format, omit owner
# -g  Long format, omit group
alias ls='ls -hG'
alias ll='ls -og'
alias la='ls -A'
alias l1='ls -1'

# Shortcuts
alias e='eval $EDITOR'
alias tmux='tmux -2' # Ensure 256 colors
alias sshcent6='ssh root@pe-centos6'
alias sshdeb6='ssh root@pe-debian6'
alias remove-master-ssl='rm -rf $PUPPETLABS_CONF/puppet/master/conf/ssl'
alias remove-agent-ssl='rm -rf $PUPPETLABS_CONF/puppet/agent/conf/ssl'
